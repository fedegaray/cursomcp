@mcp.tool()
def listar_proyectos() -> str:
    """Lista todos los proyectos registrados"""
    if not proyectos_db:
        return "ğŸ“‹ No hay proyectos registrados"
   
    resultado = "ğŸ“Š PROYECTOS:\n" + "="*40 + "\n"
   
    for proyecto in proyectos_db.value():
        resultado += f"""
        [{proyecto['id']}] {proyecto['nombre']}
        Prioridad: {'â­' * proyecto['prioridad']}
        Estado: {proyecto['estado']}
        Creado: {proyecto['creado']}
        """
   
    return resultado
